unit OrderForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ExtCtrls, OrderCUForm, DataModule;

type
  TfrmOrder = class(TForm)
    dsOrders: TDBGrid;
    DataSource1: TDataSource;
    btnCreate: TButton;
    btnUpdate: TButton;
    btnDelete: TButton;
    Panel1: TPanel;
    procedure btnCreateClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure btnUpdateClick(Sender: TObject);  // OnShow event to refresh grid on form load
  private
    { Private declarations }
  public
    { Public declarations }
    procedure RefreshGrid;
  end;

var
  frmOrder: TfrmOrder;

implementation

{$R *.dfm}

// When the form is shown, populate the grid

procedure TfrmOrder.FormShow(Sender: TObject);
begin
  RefreshGrid;
end;

// Create a new order
procedure TfrmOrder.btnCreateClick(Sender: TObject);
begin
  frmOrderCU.Caption := 'Create Order';
  frmOrderCU.showmodal;
  RefreshGrid;
end;

procedure TfrmOrder.btnUpdateClick(Sender: TObject);
begin
  frmOrderCU.Caption := 'Update Order';
  frmOrderCU.showmodal;
  RefreshGrid;
end;


// Refresh the grid with the latest data from the orders table
procedure TfrmOrder.RefreshGrid;
begin
  with DM.QrySELECT do
  begin
    Active := False;
    SQL.Clear;
    SQL.Text := 'SELECT * FROM orders';  // Fetch all orders
    Active := True;
  end;
end;

end.

